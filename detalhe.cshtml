@page
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Detalhes do Chamado</title>
    <link rel="icon" type="logo-icon" href="#">
    <link rel="stylesheet" href="~/css/detalhe.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
</head>
<body>
    <aside class="sidebar">
        <div class="logo">
            <div class="logo-icon">
                <img src="/Img/AgilizaTI.v2.png" alt="Logo AgilizaTI" />
            </div>
            <div class="logo-text">
                <span>AgilizaTI</span>
            </div>
        </div>

        <div class="menu-section">
            <div class="menu-label">Colaborador</div>
            <a href="Abrirchamado" class="menu-item">
                <span class="menu-icon">⊞</span>
                <span>Abrirhamado</span>
            </a>
            <a href="chamados" class="menu-item active">
                <span class="menu-icon">≡</span>
                <span>Acompanhar Chamados</span>
            </a>
        </div>

        <button class="exit-btn">
            <span>Sair</span>
        </button>
    </aside>

    <div class="main-container">

        <header class="header">
            <div class="header-icons">
                <i class="bi bi-bell notification-icon"></i>
                <i class="bi bi-person-circle user-avatar"></i>
            </div>
        </header>

        <div class="content">
            <div class="title-section">
                <h1 id="detalhe-titulo">Carregando Detalhes do Chamado...</h1>
                <div class="status-bar">
                    <span id="detalhe-status" class="status-badge status-carregando">...</span>
                    <button class="cancel-btn">Cancelar chamado</button>
                </div>
                <p id="mensagem-status-detalhe" style="margin-top: 10px; color: blue;"></p>
            </div>
            <div id="chamado-nao-encontrado" style="color: red; margin-top: 15px; display: none;">
                Chamado não encontrado.
            </div>

            <div class="divider"></div>

            <h2 class="section-title">Detalhes do Chamado</h2>
            <div class="details-grid">
                <div class="detail-item">
                    <div class="detail-label">ID do Chamado</div>
                    <div id="detalhe-id" class="detail-value">...</div>
                </div>
                <div class="detail-item">
                    <div class="detail-label">Prioridade</div>
                    <div id="detalhe-prioridade" class="detail-value">...</div>
                </div>
                <div class="detail-item">
                    <div class="detail-label">Tipo de Problema</div>
                    <div id="detalhe-categoria" class="detail-value">...</div>
                </div>
                <div class="detail-item">
                    <div class="detail-label">Localização</div>
                    <div class="detail-value">...</div>
                </div>
                <div class="detail-item">
                    <div class="detail-label">Técnico Responsável</div>
                    <div id="detalhe-tecnico" class="detail-value">...</div>
                </div>
                <div class="detail-item">
                    <div class="detail-label">Data de Abertura</div>
                    <div id="detalhe-data-abertura" class="detail-value">...</div>
                </div>
                <div class="detail-item">
                    <div class="detail-label">Última Atualização</div>
                    <div class="detail-value">...</div>
                </div>
                <div class="detail-item">
                    <div class="detail-label">Estimativa de Conclusão</div>
                    <div class="detail-value">...</div>
                </div>
            </div>

            <div class="divider"></div>

            <h2 class="section-title">Descrição do Problema</h2>
            <p id="detalhe-descricao" class="description-text">
                ...
            </p>

            <div class="divider"></div>

            <h2 class="section-title">Registro de Atividades</h2>
            <table class="activity-table">
                <thead>
                    <tr>
                        <th>Horário</th>
                        <th>Ação</th>
                        <th>Usuário</th>
                    </tr>
                </thead>
                <tbody id="corpo-registro-atividades">
                </tbody>
            </table>
        </div>    
    </div>
    <script src="~/js/detalhe.js"></script>
</body>
</html>